{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "check-coverage": true,
  "reporter": ["text", "html", "lcov"],
  "report-dir": "./coverage",
  "exclude": [
    "**/*.d.ts",
    "**/*.test.ts",
    "**/test/**",
    "**/out/**",
    "**/node_modules/**",
    "**/scripts/**"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "extension": [
    ".ts"
  ],
  "require": [
    "ts-node/register",
    "source-map-support/register"
  ],
  "sourceMap": true,
  "instrument": true,
  "branches": 80,
  "lines": 80,
  "functions": 80,
  "statements": 80
}
